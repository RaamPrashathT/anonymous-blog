datasource db {
    provider = "postgresql"
}

generator client {
    provider = "prisma-client-js"
    output   = "../../generated/prisma"
}

model Blogs {
    id            String     @id @default(cuid())
    title         String
    content       String
    username      String
    image         String
    tags          String[]
    likes         Int        @default(0)
    dislikes      Int        @default(0)
    trendingScore Float      @default(0)
    createdAt     DateTime   @default(now())
    comments      Comments[]
}

model Comments {
    id        String   @id @default(cuid())
    blogId    String
    content   String
    username  String
    likes     Int      @default(0)
    dislikes  Int      @default(0)
    createdAt DateTime @default(now())

    blog Blogs @relation(fields: [blogId], references: [id], onDelete: Cascade)
}
